@model SimpleContact.Models.EmailRequest
@{
    ViewData["Title"] = "Home Page - Contact";
}

<div class="row">
    <div class="col-12 text-center">
        <h1 class="display-4">Optoma Pretask</h1>
        
        <p>Below is the optoma pretask.   This is a very basic contact form that would send an email to optoma.</p>
        <p>Please can you complete the implementation of the below form.</p>
    </div>
</div>
<div class="row justify-content-center text-center">
    <div class="col-8">
        <form asp-action="Index" method="post">
            <div class="form-group mb-2">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" asp-for="Name">
            </div>
            <div class="form-group mb-2">
                <label for="email">Email</label>
                <input type="text" class="form-control" id="email" asp-for="Email">
            </div>
            <div class="form-group mb-2">
                <label for="message">Mesage</label>
                <textarea type="text" class="form-control" id="message" asp-for="Message"></textarea>
            </div>
            <div class="form-group mb-2">
                <input type="submit" class="btn btn-primary" value="Send">
            </div>
        </form>
    </div>
</div>
